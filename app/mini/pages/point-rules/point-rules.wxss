/* ================== 容器与基础 ================== */
.container {
  padding: 32rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* ================== 页面标题 ================== */
.page-title {
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 36rpx;
  color: #222;
  letter-spacing: 1rpx;
}

/* ================== 文章内容 ================== */
.content {
  background: #fff;
  padding: 28rpx 24rpx;
  border-radius: 14rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  font-size: 32rpx;
  color: #333;
  line-height: 1.7;
}

/* ================== 加载中 ================== */
.loading {
  font-size: 28rpx;
  color: #aaa;
  text-align: center;
  margin-top: 60rpx;
  padding: 40rpx 0;
}

/* ================== Header ================== */
.header {
  background: linear-gradient(90deg, #44BBBB 0%, #3CAEA3 100%);
  padding: 48rpx 32rpx 36rpx 32rpx;
  border-radius: 0 0 18rpx 18rpx;
  box-shadow: 0 2rpx 8rpx rgba(68, 187, 187, 0.08);
}

/* ================== 标题 ================== */
.title {
  color: #fff;
  font-size: 38rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  text-align: center;
}

/* ================== 规则内容 ================== */
.rules-content {
  padding: 32rpx 0;
}

/* ================== 分类列表 ================== */
.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 28rpx;
}

/* 分类项 */
.category-item {
  padding: 16rpx 36rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
  border: 2rpx solid #eee;
  transition: all 0.2s;
  cursor: pointer;
}

.category-item.active {
  background: linear-gradient(90deg, #44BBBB 60%, #3CAEA3 100%);
  color: #fff;
  border-color: #44BBBB;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(68, 187, 187, 0.10);
}

/* ================== 子分类列表 ================== */
.subcategory-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 28rpx;
}

/* 子分类项 */
.subcategory-item {
  padding: 12rpx 28rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid #eee;
  transition: all 0.2s;
  cursor: pointer;
}

.subcategory-item.active {
  color: #44BBBB;
  background: rgba(68, 187, 187, 0.13);
  border-color: #44BBBB;
  font-weight: 500;
}

/* ================== 规则列表 ================== */
.rules-list {
  background: #fff;
  border-radius: 14rpx;
  padding: 24rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 规则项 */
.rule-item {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.rule-item:last-child {
  border-bottom: none;
}

/* 规则头部 */
.rule-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

/* 规则名称 */
.rule-name {
  font-size: 30rpx;
  color: #222;
  font-weight: 600;
}

/* 规则分数 */
.rule-points {
  font-size: 30rpx;
  color: #44BBBB;
  font-weight: 600;
}

/* 规则描述 */
.rule-desc {
  font-size: 24rpx;
  color: #888;
  margin-top: 6rpx;
  line-height: 1.5;
}

