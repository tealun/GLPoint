/* 分类块 */
.category-block {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 14rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  padding: 0 0 24rpx 0;
}

/* 一级分类标题 */
.category-title-article {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  padding: 28rpx 32rpx 10rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(90deg, #44BBBB 80%, #3CAEA3 100%);
  border-radius: 14rpx 14rpx 0 0;
}

/* 二级分类标题 */
.subcategory-title-article {
  position: relative;
  font-size: 34rpx;
  font-weight: 600;
  color: #2a8c8c;
  margin: 32rpx 0 8rpx 32rpx;
  padding-left: 20rpx;
  background: linear-gradient(90deg, #eaf8f8 80%, transparent 100%);
  border-radius: 8rpx;
  line-height: 1.7;
}

.subcategory-title-article::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 60%;
  background: #44BBBB;
  border-radius: 4rpx;
}

/* 二级分类描述 */
.subcategory-desc {
  font-size: 24rpx;
  color: #888;
  margin: 0 0 12rpx 32rpx;
  line-height: 1.6;
}

/* 规则表格 */
.rules-table {
  margin: 0 24rpx 0 24rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #f9f9f9;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.03);
}

/* 表头 */
.rules-table-header {
  display: flex;
  background: #eaf8f8;
  font-size: 26rpx;
  font-weight: 600;
  color: #44BBBB;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.col-index {
  width: 80rpx;
  text-align: center;
}

.col-rule {
  flex: 1;
  padding: 0 12rpx;
}

.col-score {
  width: 100rpx;
  text-align: right;
  padding-right: 12rpx;
}

/* 表格行 */
.rules-table-row {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  color: #333;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 16rpx 0;
}

.rules-table-row:last-child {
  border-bottom: none;
}

/* 规则描述 */
.rule-desc {
  font-size: 24rpx;
  color: #888;
  margin-top: 6rpx;
  line-height: 1.5;
}

/* 无规则提示 */
.no-rules {
  text-align: center;
  color: #bbb;
  font-size: 26rpx;
  padding: 24rpx 0;
  background: #f9f9f9;
}
