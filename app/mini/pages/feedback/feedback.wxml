<view class="container">
  <!-- 顶部标题 -->
  <view class="header">
    <text class="title">建议反馈</text>
  </view>

  <!-- 描述信息 -->
  <view class="description">
    <text class="description-text">您的意见对我们非常重要，请填写以下表单。</text>
  </view>

  <!-- 输入框 -->
  <view class="form-card">
    <textarea 
      class="feedback-input"
      placeholder="请输入您的建议或意见..."
      maxlength="300"
      bindinput="onContentInput"
      disabled="{{submitting}}"
    ></textarea>
  </view>

  <!-- 提交和重置按钮 -->
  <view class="action-buttons">
    <button 
      class="submit-btn {{submitting ? 'submitting' : ''}}"
      bindtap="submitFeedback"
      disabled="{{submitting}}"
    >
      {{submitting ? '提交中...' : '提交'}}
    </button>
    <button 
      class="reset-btn"
      bindtap="resetForm"
      disabled="{{submitting}}"
    >
      重置
    </button>
  </view>

  <!-- 跳转链接 -->
  <view class="navigation-links">
    <view class="divider"></view> <!-- 添加分割线 -->
    <text class="nav-link styled-link" bindtap="goToMyFeedback">查看我的建议</text>
    <text class="nav-link styled-link" wx:if="{{isOperator}}" bindtap="goToReviewFeedback">
      审核建议 ({{reviewCount}})
    </text>
  </view>
</view>
