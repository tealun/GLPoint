.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 40rpx;
}

/* 顶部标题样式 */
.header {
  background: #44BBBB;
  padding: 40rpx 30rpx;
}

.title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
}

/* 表单卡片样式 */
.form-card {
  margin: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.input-box {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 性别选择样式 */
.gender-select {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.gender-option {
  padding: 10rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border: 2rpx solid transparent;
}

.gender-option.active {
  color: #44BBBB;
  border-color: #44BBBB;
  background: rgba(68, 187, 187, 0.1);
}

/* 门派选择样式 */
.picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 提交按钮样式 */
.submit-btn {
  margin: 60rpx 30rpx;
  font-size: 32rpx;
  border-radius: 8rpx;
  background: #44BBBB;
  color: #fff;
  border: none;
  transition: background 0.2s;
}

.submit-btn[disabled] {
  background: #c0c0c0;
  color: #fff;
}
