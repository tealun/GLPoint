.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  height: 100vh;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

/* 详细信息卡片 */
.detail-card {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}
.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #ddd;
}
.detail-item:last-child {
  border-bottom: none;
}
.label {
  font-size: 28rpx;
  color: #666;
}
.value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
}
.increase {
  color: #44BBBB;
}
.decrease {
  color: #FF5555;
}

/* 状态消息 */
.status-message {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0;
}

/* 文本输入框 */
.textarea-box {
  font-size: 32rpx;
  width: 100%;
  height: 200rpx;
  border: none;
  outline: none;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}
.word-counter {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 提交按钮 */
.submit-btn {
  background-color: #44BBBB;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  text-align: center;
  border-radius: 10rpx;
}
.submit-btn[disabled] {
  background-color: #ccc;
}

.header {
  background: #44BBBB;
  padding: 40rpx 30rpx;
}

.title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
}

.form-card {
  margin: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.picker {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.detail-section {
  margin: 30rpx 0;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.detail-item {
  margin-bottom: 16rpx;
}

.detail-label {
  color: #666;
  font-size: 26rpx;
}

.detail-value {
  color: #333;
  font-size: 26rpx;
  margin-left: 10rpx;
}

.detail-value.positive { color: #44BBBB; }
.detail-value.negative { color: #ff4d4f; }

.appeal-input {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.counter {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.status-section {
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.status-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.status-text.pending { color: #faad14; }
.status-text.completed { color: #52c41a; }

.reply-text {
  font-size: 26rpx;
  color: #666;
}
