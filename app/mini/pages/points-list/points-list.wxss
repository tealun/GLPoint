.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  height: 100vh;
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #44BBBB;
  padding: 20rpx;
  border-radius: 10rpx;
  color: white;
  font-size: 30rpx;
}
.header-title {
  flex: 1;
  text-align: center;
}
.filter-btn {
  background-color: white;
  color: #44BBBB;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

/* 筛选选项 */
.filter-options {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
}
.filter-item {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #ddd;
}
.filter-item:last-child {
  border-bottom: none;
}
.close-btn {
  margin-top: 20rpx;
  background-color: #44BBBB;
  color: white;
  font-size: 28rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  text-align: center;
}

/* 积分列表 */
.points-list {
  margin-top: 20rpx;
}
.points-item {
  /* 让每条记录纵向排列，内容分两行 */
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 20rpx 20rpx 12rpx 20rpx; /* 增加底部内边距 */
  background-color: white;
  margin-bottom: 16rpx; /* 增大间距 */
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.points-item > view:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date {
  font-size: 28rpx;
  color: #333;
}
.score {
  font-size: 28rpx;
  color: #44BBBB;
  font-weight: bold;
}

/* remark 行样式 */
.remark-row {
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 0;
  display: flex;
  align-items: flex-start;
  /* background: #f8f8f8; */  /* 移除底色 */
  /* border-radius: 6rpx; */  /* 移除圆角 */
  padding: 10rpx 0 0 0;      /* 仅保留顶部间距 */
}
.remark-text {
  font-size: 24rpx;
  color: #888;
  text-align: left;
  word-break: break-all;
  line-height: 1.7;
  padding: 0;
  width: 100%;
}

/* 无数据提示 */
.no-data-tip {
  margin: 60rpx auto 0 auto;
  color: #bbb;
  font-size: 28rpx;
  text-align: center;
  padding: 40rpx 0;
}
