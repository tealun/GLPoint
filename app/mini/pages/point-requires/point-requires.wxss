.tabs {
  display: flex;
  border-bottom: 1px solid #eee;
  background: #fff;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 32rpx;
  color: #888;
  border-bottom: 4rpx solid transparent;
}
.tab.active {
  color: #44bbbb;
  border-bottom: 4rpx solid #44bbbb;
  font-weight: bold;
}
.list {
  padding: 24rpx;
}
.item {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx #f0f1f2;
  padding: 24rpx;
}
.time {
  font-size: 24rpx;
  color: #bbb;
  margin-bottom: 12rpx;
}
.content {
  font-size: 30rpx;
  color: #222;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.empty {
  text-align: center;
  color: #bbb;
  margin-top: 80rpx;
  font-size: 28rpx;
}
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 40rpx 0 20rpx 0;
  background: #fff;
  color: #222;
}
