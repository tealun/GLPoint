.appeal-detail-page {
  padding: 24rpx;
}
.section {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  padding: 24rpx 20rpx;
  box-shadow: 0 2rpx 8rpx #f0f1f2;
}
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #44bbbb;
}
.section-content view {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.loading, .error {
  text-align: center;
  color: #aaa;
  font-size: 30rpx;
  margin-top: 80rpx;
}
.reply-input {
  width: 100%;
  min-height: 180rpx; /* 原80rpx，调大 */
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 24rpx;     /* 原16rpx，调大 */
  font-size: 32rpx;   /* 原28rpx，调大 */
  margin: 16rpx 0 24rpx 0;
  background: #fafbfc;
  box-sizing: border-box;
}
.reply-btns {
  display: flex;
  gap: 24rpx;
  margin-bottom: 8rpx;
}
.btn.accept {
  flex: 1;
  background: #44bbbb;
  color: #fff;
  border: none;
}
.btn.reject {
  flex: 1;
  background: #ff6666;
  color: #fff;
  border: none;
}
