.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 40rpx;
}

/* 时间段切换导航 */
.time-selector {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.time-selector view {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  position: relative;
}
.time-selector .active {
  color: #44BBBB;
  font-weight: 500;
}
.time-selector .active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #44BBBB;
  border-radius: 2rpx;
}

/* 领奖台样式 */
.podium-section {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  overflow: hidden;  /* 防止内容溢出 */
}

.podium-container {
  height: 180px; /* 增加高度以容纳徽章和分数 */
  display: flex;
  align-items: flex-end;
  justify-content: center;
  position: relative;
  padding: 20rpx 0 0 0; /* 上内边距，去除下内边距 */
  margin-bottom: 10rpx;
}

.podium-item {
  position: relative;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 0;
  padding-top: 32rpx; /* 增加顶部内边距，避免徽章和头像重叠 */
  box-sizing: border-box;
}

/* 调整第一名位置 */
.podium-item.first {
  margin-bottom: 0;
  margin-top: -36px; /* 适当上移，原-30px */
  height: 340rpx;    /* 原380rpx，减小高度 */
}

/* 调整第二名位置 */
.podium-item.second {
  margin-bottom: 0;
  height: 260rpx; /* 原290rpx，减小高度让内容下移 */
}

/* 调整第三名位置 */
.podium-item.third {
  margin-bottom: 0;
  height: 240rpx; /* 原250rpx，略减小高度 */
  margin-top: 10px; /* 新增，让内容整体下移一点 */
}

.podium-block {
  position: absolute;
  bottom: 0;        /* 确保底部对齐 */
  width: 140rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.podium-block.first {
  height: 50px; /* 原高度如为80px，可适当减小 */
  background: linear-gradient(45deg, #FFD700 0%, #FFA500 100%);
}

.podium-block.second {
  height: 38px; /* 原高度如为60px，可适当减小 */
  background: linear-gradient(45deg, #E8E8E8 0%, #A9A9A9 100%);
}

.podium-block.third {
  height: 30px; /* 原高度如为50px，可适当减小 */
  background: linear-gradient(45deg, #CD7F32 0%, #8B4513 100%);
}

.podium-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 8rpx; /* 减少头像和名字间距 */
  z-index: 2;
}

.podium-item.first .avatar {
  width: 120rpx;
  height: 120rpx;
}

.podium-item .name {
  z-index: 2;
  font-size: 26rpx;
  margin-bottom: 2rpx; /* 更紧凑 */
  max-width: 140rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.score-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
  min-height: 36rpx;
  height: auto;
  /* 修正：确保内容不会被遮挡 */
  width: 100%;
  background: transparent;
  z-index: 3;
  position: relative;
  box-sizing: border-box;
}

/* 第一名分数色 */
.podium-item.first .podium-points,
.podium-item.first .podium-points-unit {
  color: #FF5722; /* 橙红色，对比金色领奖台 */
}

/* 第二名分数色 */
.podium-item.second .podium-points,
.podium-item.second .podium-points-unit {
  color:rgb(22, 136, 180); /* 蓝色，对比银色领奖台 */
}

/* 第三名分数色 */
.podium-item.third .podium-points,
.podium-item.third .podium-points-unit {
  color: #fff !important; /* 白色，对比铜色领奖台，强制优先 */
}

.podium-points {
  font-size: 28rpx; /* 缩小字体 */
  font-weight: bold;
  margin-right: 4rpx;
  line-height: 1.2;
  display: inline;
  vertical-align: middle;
  background: transparent;
  z-index: 3;
}

.podium-points-unit {
  font-size: 22rpx; /* 缩小字体 */
  line-height: 1.2;
  margin-left: 0;
  display: inline;
  vertical-align: middle;
  background: transparent;
  z-index: 3;
}

/* 排行榜列表 */
.ranking-list {
  background: #fff;
  margin: 0 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-top: 20rpx; /* 新增：列表与领奖台间距 */
}
.ranking-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx; /* 增加左右内边距 */
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 8rpx; /* 条目间距 */
  background: #fff;
}
.rank {
  font-size: 28rpx;
  font-weight: bold;
  width: 50rpx;
  text-align: center;
}
.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.points {
  font-size: 28rpx;
  color: #44BBBB;
  font-weight: bold;
  display: inline-block;
  margin-right: 8rpx; /* 新增：数字与“分”间距 */
  vertical-align: middle;
}
.points-unit {
  font-size: 26rpx;
  color: #44BBBB;
  margin-left: 2rpx;
  vertical-align: middle;
}

/* 当前用户高亮 */
.highlight {
  background-color: #FFF4E5;
  border-radius: 10rpx;
}

.avatar-crown-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 100px; /* 根据实际头像大小调整 */
  margin: 0 auto;
}
.avatar-crown-wrapper .crown {
  position: absolute;
  top: -30px; /* 让皇冠悬浮在头像上方，数值可调整 */
  left: 50%;
  transform: translateX(-50%);
  width: 40px; /* 根据皇冠图片实际大小调整 */
  height: 30px;
  z-index: 2;
}
.avatar-crown-wrapper .avatar {
  width: 80px;  /* 头像大小 */
  height: 80px;
  border-radius: 50%;
  background: #fff;
  z-index: 1;
  margin-top: 20px; /* 让头像下移，避免被皇冠遮挡 */
  object-fit: cover;
}
/* 第一名 podium-item 的名字和分数居中 */
.podium-item.first .name,
.podium-item.first .points {
  text-align: center;
  width: 100%;
  display: block;
}

/* 前三名名次徽章 */
.podium-rank-badge {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -60%);
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  z-index: 4;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.10);
}
/* 单独调整第一名徽章位置 */
.podium-item.first .podium-rank-badge {
  background: linear-gradient(45deg, #FFD700 0%, #FFA500 100%);
  top: 16rpx; /* 往下移一些，原来是0 */
  transform: translate(-50%, 0); /* 只水平居中，不再上移 */
}
.podium-item.second .podium-rank-badge {
  background: linear-gradient(45deg, #C0C0C0 0%, #A9A9A9 100%);
