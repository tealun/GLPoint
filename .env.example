# ==========================================
# GLpoint 积分管理系统环境配置模板
# ==========================================
# 使用说明：
# 1. 复制此文件并重命名为 .env
# 2. 填入真实的配置信息
# 3. .env 文件不会被提交到 Git
# ==========================================

# ==========================================
# 应用配置
# ==========================================
APP_DEBUG = true
APP_TRACE = false

# ==========================================
# 数据库配置
# ==========================================
# 数据库类型
DATABASE_TYPE = mysql
# 数据库主机
DATABASE_HOSTNAME = 127.0.0.1
# 数据库端口
DATABASE_HOSTPORT = 3306
# 数据库名称
DATABASE_DATABASE = glpoint
# 数据库用户名
DATABASE_USERNAME = root
# 数据库密码
DATABASE_PASSWORD = 
# 数据库字符集
DATABASE_CHARSET = utf8mb4
# 数据库表前缀
DATABASE_PREFIX = woo_

# ==========================================
# 微信小程序配置
# ==========================================
# ==========================================
# 微信小程序配置
# ==========================================
# 小程序 AppID（示例：wx1234567890abcdef）
WECHAT_MINI_APP_ID = wx1234567890abcdef
# 小程序 AppSecret（从微信公众平台获取）
WECHAT_MINI_APP_SECRET = 0123456789abcdef0123456789abcdef
# 小程序名称
WECHAT_MINI_APP_NAME = GLpoint积分系统 

# ==========================================
# API 配置
# ==========================================
# API 基础地址（开发环境）
API_BASE_URL = http://localhost
# API 基础地址（生产环境，部署时修改）
# API_BASE_URL = https://api.yourdomain.com

# ==========================================
# JWT 认证配置
# ==========================================
# JWT 密钥（必须修改为复杂的随机字符串，至少32位）
JWT_SECRET = your-super-secret-jwt-key-change-this-in-production
# Token 过期时间（秒，默认2小时）
JWT_TTL = 7200
# 刷新 Token 过期时间（分钟，默认14天）
JWT_REFRESH_TTL = 20160
# 签发者
JWT_ISS = api.glpoint.com
# 接收者
JWT_AUD = glpoint.com
# 黑名单开关
JWT_BLACKLIST_ENABLED = true
# 黑名单宽限期（秒）
JWT_BLACKLIST_GRACE_PERIOD = 0
# 签名算法（HS256, HS384, HS512, RS256 等）
JWT_SIGNER = HS256

# ==========================================
# Redis 配置（可选）
# ==========================================
REDIS_HOST = 127.0.0.1
REDIS_PORT = 6379
REDIS_PASSWORD = 
REDIS_SELECT = 0

# ==========================================
# 其他服务配置（可选）
# ==========================================
# 短信服务配置
# SMS_PROVIDER = aliyun
# SMS_ACCESS_KEY = 
# SMS_ACCESS_SECRET = 

# 邮件服务配置
# MAIL_HOST = smtp.example.com
# MAIL_PORT = 465
# MAIL_USERNAME = 
# MAIL_PASSWORD = 
# MAIL_FROM_ADDRESS = noreply@example.com
# MAIL_FROM_NAME = GLpoint

# OSS 存储配置（阿里云、腾讯云等）
# OSS_PROVIDER = aliyun
# OSS_ACCESS_KEY = 
# OSS_ACCESS_SECRET = 
# OSS_BUCKET = 
# OSS_ENDPOINT = 
# OSS_DOMAIN = 

# ==========================================
# 安全提醒
# ==========================================
# ⚠️ 重要提示：
# 1. 绝不要将 .env 文件提交到 Git
# 2. JWT_SECRET 必须设置为复杂随机字符串
# 3. 生产环境必须修改所有默认密码
# 4. API_BASE_URL 需根据部署环境修改
# 5. 定期更换敏感凭证
# ==========================================
